<Window x:Class="Sync.Net.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sync.Net.UI"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainWindow}">
    <Grid>
        <local:Configuration />
        <Button x:Name="Sync" Content="Sync" Margin="0,0,10.4,9.8" VerticalAlignment="Bottom"
                HorizontalAlignment="Right" Width="75" Command="{Binding SyncCommand}" />
        <TextBox x:Name="textBox" VerticalScrollBarVisibility="Visible" Text="{Binding Log, Mode=OneWay}" Margin="10,121,10.4,33.8" TextWrapping="Wrap" />
        <Button x:Name="button" Content="Exit" HorizontalAlignment="Left" Margin="10,0,0,9.8" Width="75"
                Command="{Binding ExitCommand}" Height="19" VerticalAlignment="Bottom" />
    </Grid>
</Window>