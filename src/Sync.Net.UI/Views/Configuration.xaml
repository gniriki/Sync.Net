<UserControl x:Class="Sync.Net.UI.Configuration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sync.Net.UI"
             xmlns:viewModels="clr-namespace:Sync.Net.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding Source={StaticResource Locator}, Path=Configuration}">
    <Grid>
        <Label x:Name="label" Content="Local directory" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" Height="23" Margin="10,36,90,0" TextWrapping="Wrap" Text="{Binding LocalDirectory}" VerticalAlignment="Top"/>
        <Button x:Name="button" Command="{Binding SelectFile}" Content="Select" Margin="0,35,10,0" VerticalAlignment="Top" Height="24" HorizontalAlignment="Right" Width="75"/>
        <Label x:Name="label1" Content="S3 Bucket" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" Text="{Binding S3Bucket}" Height="23" Margin="10,90,90,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
